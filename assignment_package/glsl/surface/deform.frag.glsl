    float orientation = dot(normalize(fs_Nor), normalize(fs_Pos));
    float t = orientation * (sin(u_Time) * 0.05) + 0.5;

    vec3 noise = vec3(noise(fs_Pos), noise(fs_Pos + vec3(0.0, 0.33, 0.0)), noise(fs_Pos + vec3(0.0, 0.0, 0.67)));

    vec3 a = vec3(0.5, 0.5, 0.5);
    vec3 b = vec3(0.5, 0.5, 0.5);
    vec3 c = vec3(2.0, 1.0, 1.0);
    vec3 d = noise;

    vec3 color = a + b * cos(2 * PI * (c * t + d));

    out_Col = color;

}
